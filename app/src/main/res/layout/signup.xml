<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/blue">

    <EditText
        android:id="@+id/editTextUserName"
        android:hint="User Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textColorHint="#000"
        android:typeface="monospace">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_below="@+id/editTextUserName"
        android:layout_toRightOf="@+id/editTextPassword" />

    <EditText
        android:id="@+id/editFirstName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="FirstName"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_below="@+id/editTextConfirmPassword"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/editLastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="LastName"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_below="@+id/editFirstName"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_below="@+id/editLastName"
        android:layout_alignRight="@+id/editTextMothersPhone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:hint="Date Of Birth"
        android:id="@+id/editTextDOB"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/editTextMothersPhone" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_below="@+id/editTextDOB"
        android:layout_alignRight="@+id/editTextFathersPhone" />


    <EditText
        android:id="@+id/editTextMothersPhone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Mothers Phone"
        android:inputType="phone"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_alignTop="@+id/editTextMAMANAME"
        android:layout_alignParentRight="true" />


    <Button
        android:id="@+id/buttonCreateAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColorHint="#0000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/editTextMAMANAME"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Mothers Name"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/buttonCreateAccount" />

    <EditText
        android:id="@+id/editTextFathersPhone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Fathers Phone"
        android:inputType="phone"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_alignTop="@+id/editTextPAPANAME"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/editTextPAPANAME"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Fathers Name"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_below="@+id/editTextPhoneNumber"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_weight="1"
        android:layout_below="@+id/editTextUserName"
        android:layout_alignParentLeft="true" />

</RelativeLayout>